{
  "name": "template-express",
  "version": "1.0.0",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "dev": "tsc -w & NODE_ENV=development nodemon .",
    "build": "tsc",
    "start": "NODE_ENV=production node .",
    "lint": "eslint --fix",
    "format": "prettier --write src --ignore-path .gitignore",
    "update": "npx npm-check-updates -i",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "typescript": "^4.6.3"
  }
}
